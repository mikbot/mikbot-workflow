{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "description": "Update Java Version",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "JAVA_VERSION: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "java-version",
      "packageNameTemplate": "java-jdk",
      "versioningTemplate": "loose"
    }
  ]
}
